load("constants.mac")$
load("basic.mac")$

fieldPlan_area_charge(__A, __Q) := (
	__σ: __Q / __A,
	__E: 2 * %pi * %k * __σ,
	__ret: __E
)$

chargeSphere_field_centerDistance(__E, __r) := (
	__Q: __E * __r^2 / %k,
	__ret: __Q
)$


fluxSphere_radius_charges_positions(__R, __q, __p) := (
	__Ex: 0,
	__Ey: 0,
	__Ez: 0,
	__n: length(__q),
	for i: 1 thru __n do {
		__x: __p[i][1],
		__y: __p[i][2],
		__z: __p[i][3],
		__d: modulus([x - __x, y - __y, z - __z]),
		__Ex: __Ex + __q[i] * (x - __x) / __d^3,
		__Ey: __Ey + __q[i] * (y - __y) / __d^3,
		__Ez: __Ez + __q[i] * (z - __z) / __d^3
	},
	__E: [__Ex, __Ey, __Ez],
	__ret: __E
)$
/*
Esfera:
fluxo: 4 * %pi * r^2 * E(r)
fluxo: 4 * %pi * _k_ * qint
qint: Q / R^3 * r^3
E(r): _k_ * qint / r^2
|E(r)|: _k_ * Q / R^3 * r

Plano:
fluxo: 2 * A * E
fluxo: 4 * %pi * _k_ * Q
sigma: Q/A
E: 2 * %pi * _k_ * sigma
*/
